" Alias file

" Leader stuff
let mapleader = ","

" vimrc edits
nnoremap <leader>sv :source ~/.vim/vimrc<cr>

" remap ; to :
noremap ; :

" wrapped line movement 
nnoremap k gk
nnoremap j gj

" Arrow keys
nnoremap <Up> ddP

" Buffers
nnoremap bn :bnext<cr>
nnoremap bp :bprevious<cr>

" Splits
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
set splitbelow
set splitright

