syntax on
set nocompatible
set hidden
filetype plugin indent on
set backspace=indent,eol,start
set cursorline
set noswapfile
set number
set encoding=utf-8

" Theme
" TODO get 24 bit color in tmux + iterm
" https://deductivelabs.com/en/2016/03/using-true-color-vim-tmux/
" https://www.reddit.com/r/vim/comments/2ozwe4/24_bit_vim_in_osx_iterm2_a_reality/
" set guicolors
" set background=dark
colorscheme boa


filetype off
let &runtimepath.=',~/.vim/bundle/ale'
filetype plugin on

" Plugins
execute pathogen#infect()

" Ctrl + P
set runtimepath^=~/.vim/bundle/ctrlp.vim

" Shortcuts
source ~/.vim/alias.vim
source ~/.vim/plugins.vim

" ctrlp ignore
let g:ctrlp_custom_ignore = 'node_modules\|DS_Store\|git'

" Dictionary
set dictionary=/usr/share/dict/words

" Session Management
" ...?

" Indentation
set expandtab ts=2 shiftwidth=2 softtabstop=2

" Highlight curr line (only active window)
augroup CursorLine
  au!
  au VimEnter,WinEnter,BufWinEnter * setlocal cursorline
  au WinLeave * setlocal nocursorline
augroup END


set mouse=a
if has("mouse_sgr") && !has('nvim')
  set ttyfast
  set ttymouse=sgr
endif

set autoread

set wildignore+=.DS_Store
set wildignore+=*.jpg,*.jpeg,*.gif,*.png,*.gif,*.psd,*.o,*.obj,*.min.js
set wildignore+=*/bower_components/*,*/node_modules/*
set wildignore+=*/smarty/*,*/vendor/*,*/.git/*,*/.hg/*,*/.svn/*,*/.sass-cache/*,*/log/*,*/tmp/*,*/build/*,*/ckeditor/*,*/doc/*,*/source_maps/*,*/dist/*

